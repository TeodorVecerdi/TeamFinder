<!DOCTYPE html>
<html lang="en">

  <head>
    <% include ../partials/head %>
        <link href="search-bar.css" rel="stylesheet">

    <style type="text/css">
      .jumbotron{
        box-shadow: 2px 8px 16px -8px black;
        padding: 2%;
      }
    </style>
  </head>

  <body>
    <% include ../partials/header %>

    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <div class="jumbotron" style="padding: 1%;">
            <div class="input-group" id="adv-search">
              <% if(term===''){ %>
                <input type="text" id="searchTerm" class="form-control" placeholder="Search for projects" />
              <% }else{ %>
              <input type="text" id="searchTerm" class="form-control" placeholder=<%= term %> />
              <% } %>
                <div class="input-group-btn">
                    <div class="btn-group" role="group">
                        <button type="button" class="btn" style="border-radius: 0px 5px 5px 0px;"><i class="fas fa-search"></i></span></button>
                        <a class="btn" href="/projects/create" style="margin-right: 5%; margin-left: 5px; border-radius: 5px;" role="button">Create new Project</a>
                    </div>
                </div>
            </div>
          </div>
        </div>
      </div>
      <% for(i in posts){ %>
        <div class="jumbotron">
          <h4 class="display-6"><b><%= posts[i].NAME %>
            <% if(posts[i].PLATFORMS !== ''){ %>
             - <%= posts[i].PLATFORMS %>
            <% } %></b></h4>
          <p class="lead"><%= posts[i].SUMMARY %></p>
          <p class="lead">
          <a class="btn btn-lg" href="/projects/<%= posts[i].NAME %>" role="button">Learn more</a>
          </p>
        </div>
      <% } %>
    </div>

    <% include ../partials/footer %>
    
    <script>
      jQuery(function($){
        var socket = io.connect();

      });
      $('#searchTerm').keypress(function (e) {
        if (e.which == 13) {
          window.location.href = '/projectsSearch/'+$("input").val();
        }
      });
      $('#searchBtn').click(function(){
        window.location.href = '/projectsSearch/'+$("input").val();
      });
    </script>

  </body>

</html>
