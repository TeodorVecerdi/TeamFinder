<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head %>
    <!--<link href="../search-bar.css" rel="stylesheet">-->

    <style type="text/css">
        .jumbotron {
            box-shadow: 2px 8px 16px -8px black;
            padding: 2%;
        }

        .btn {
            background-color: #343a40;
            border-color: #343a40;
            color: #00e500;
        }

        .btn:hover {
            background-color: #343a40;
            border-color: #00e500;
            color: #00e500;
        }
    </style>
</head>

<body>
<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-lg-12 text-center">
            <div class="card" style="margin-top: 0.3rem;padding:0.7rem">
                <div class="input-group" id="adv-search">
                    <input type="text" class="form-control" id="searchTerm" placeholder="Search"/>
                    <div class="input-group-btn">
                        <div class="btn-group" role="group">
                            <button type="button" class="btn" id="searchBtn"><i class="fas fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% for(i in posts){ %>
    <div class="row">
        <div class="col-lg-12 text-left">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title display-6 font-weight-bold"> <%= posts[i].NAME %>
                        <% if(posts[i].PLATFORMS !== '') { %>
                        - <%= posts[i].PLATFORMS %>
                        <% } %>
                    </h4>
                    <hr class="my-4">
                    <h5><%= posts[i].SUMMARY %></h5>
                    <a href="/teams/<%= posts[i].NAME %>" style="color: #00e500" class="d-flex flex-row-reverse p-2">
                        <p class="waves-effect waves-light px-4 py-3 z-depth-1-half" style="background-color: #343a40;">Learn more<i class="fas fa-angle-double-right ml-2"></i></p>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <% } %>
</div>

<% include ../partials/footer.ejs %>
<% include ../partials/socket-notification.ejs %>
<script>
    $('#searchTerm').keypress(function (e) {
        if (e.which == 13) {
            window.location.href = '/teams/search/' + $("input").val();
        }
    });
    $('#searchBtn').click(function () {
        window.location.href = '/teams/search/' + $("input").val();
    });
</script>

</body>

</html>
