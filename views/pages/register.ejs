<!DOCTYPE html>
<html lang="en">

  <head>
    <% include ../partials/head %>
  </head>

  <body>

    <div class="container">
      <div class="card card-container">
        <h4 style="text-align: center; margin-bottom: 15px;">Register</h4>
            <form class="form-signin" id="form">
                <input type="email" id="email" class="form-control" placeholder="Email address" required autofocus style="margin-bottom: 10px;" name="email">
                <input type="password" id="password" class="form-control" placeholder="Password" required style="margin-bottom: 10px" name="password">
                <div id="remember" class="checkbox">
                    <label>
                        <input type="checkbox" value="remember-me" autocomplete="true" name="keepMeUp"> Keep Me LoggedIn
                    </label>
                </div>
                <button class="btn btn-lg btn-primary btn-block btn-signin" type="button" onclick="auth()" id="submit">Login</button>
            </form>
            <div class="pt-1"><small class="text-center text-muted">Already have an account? <a href="/login" class="font-weight-bold link-unstyled">Log In</a> </small></div>
        </div>
    </div>
    <% include ../partials/footer %>
    
    <script>
        var socket = io.connect('localhost:3000');
        socket.on('auth login', function(res){
            if(res.status == "succesfull"){
                $.cookie('username', res.email, { expires: 14, path: '/' });
                window.location.href = '/';
            }else{
                alert(res.status);
            }
        });
        function auth() {
            socket.emit('auth login', {email:document.getElementById('email').value, password:document.getElementById('password').value})
        }
        $("#form").keyup(function(event) {
            if (event.keyCode === 13) {
                $("#submit").click();
            }
        });
    </script>
  </body>

</html>